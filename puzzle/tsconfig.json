{
  "compilerOptions": {
    "target": "ES2020",                    // Updated from es5 for modern features
    "lib": [
      "dom",
      "dom.iterable",
      "esnext"
    ],
    "allowJs": true,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "noFallthroughCasesInSwitch": true,
    "module": "esnext",
    "moduleResolution": "bundler",         // Changed from "node" to "bundler"
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": true,
    "jsx": "react-jsx",
    "baseUrl": "src",                      // Added to enable absolute imports
    "paths": {                             // Added for better import management
      "@/*": ["*"]
    },
    "noUnusedLocals": true,               // Added to catch unused variables
    "noUnusedParameters": true,            // Added to catch unused parameters
  },
  "include": [
    "src/**/*"                            // Updated to explicitly include all files under src
  ],
  "exclude": [                            // Added exclude section
    "node_modules",
    "build",
    "dist"
  ]
}